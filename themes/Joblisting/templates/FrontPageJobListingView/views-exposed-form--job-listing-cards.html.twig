{#
/**
 * @file
 * Default theme implementation of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 *
 * @ingroup themeable
 */
#}
{% if q is not empty %}
    {#
      This ensures that, if clean URLs are off, the 'q' is added first,
      as a hidden form element, so that it shows up first in the POST URL.
    #}
    {{ q }}
{% endif %}

<section class="row bg-white text-center font-size-1 font-weight-bold text-uppercase">
    <div class="col-sm-8 offset-sm-2">
        <div class="row">
            <div class="col-sm-3 padding-top-1 ">
                <div class="">
                        <span class="font-size-1 font-weight-bold"><img src="/{{ directory }}/img/filter-icon.svg"
                                                                        alt="Filter Icon" />&nbsp;
                             <input type="submit" value="Filter By" class="exposedFilterButton text-uppercase" />
                </div>
            </div>
            <div class="col-sm-3 padding-top-1 ">
                <div class="form-group row">
                    <div class="col-sm-12">
                        {% set formField =  form.field_posting_date_value %}
                        {% set formField = formField|merge({'#title': null}) %}
                        {{ formField }}
                    </div>
                </div>
            </div>
            <div class="col-sm-3 padding-top-1 ">
                <div class="form-group row">
                    <div class="col-sm-12">
                        {% set formField =  form.field_nationality_target_id %}
                        {% set formField = formField|merge({'#title': null}) %}
                        {{ formField }}
                    </div>
                </div>
            </div>
            <div class="col-sm-3 padding-top-1 ">
                <div class="form-group row">
                    <div class="col-sm-12">
                        {% set formField =  form.field_gender_target_id %}
                        {% set formField = formField|merge({'#title': null}) %}
                        {{ formField }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="row bg-white text-center font-size-1 font-weight-bold padding-top-2 text-uppercase">
    <div class="col-sm-4 offset-sm-4">
        <div class="row">
            <div class="col-sm-12">
                <div class="">
                        <span class="font-size-1 font-weight-bold"><img src="/{{ directory }}/img/bell.svg" alt="Filter Icon" />&nbsp;
                            Create Email Notification </h3>
                </div>
            </div>
        </div>
    </div>
</section>

